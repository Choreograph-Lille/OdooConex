<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="email_template_edi_invoice" model="mail.template">
        <field name="name">Invoice: Sending - C9H</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="email_from">{{ user.email_formatted }}</field>
        <field name="partner_to">{{ object._get_mail_partner() }}</field>
        <field name="subject">Invoice</field>
        <field name="description">Sent to customers with their invoices in attachment</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Hello,
                    <br/>
                    <br/>
                    You will find joined the invoice
                    <span style="font-weight:bold;" t-out="object.name or ''">INV/2021/05/0005</span>
                    for an amount of
                    <span style="font-weight:bold;" t-out="format_amount(object.amount_total, object.currency_id) or ''">$ 143,750.00</span>
                    <br/>
                    <br/>
                    Please indicate the following reference when paying:
                    <span style="font-weight:bold;" t-out="object.name or ''">INV/2021/05/0005</span>.
                    <br/>
                    <br/>
                    Do not hesitate to contact us if you have an questions.
                    <br/>
                    <br/>
                    Best regards
                    <br/>
                    <br/>
                    <strong>mandy bercker</strong>
                    <br/>
                    <span>administrative and commercial coordinator</span>
                    <br/>
                    <br/>
                    <span t-field="object.company_id.street"/>
                    <t t-if="object.company_id.street2">,
                        <span t-field="object.company_id.street2"/>
                    </t>
                    <br/>
                    <span t-field="object.company_id.zip"/>
                    <span t-field="object.company_id.city"/>
                    <br/>
                    <span t-field="object.company_id.country_id"/>
                    <br/>
                    <br/>
                    Tel:
                    <span t-field="object.company_id.phone"/>
                    <br/>
                    <span>Choreograph.com</span>
                </p>
            </div>
        </field>
        <field name="report_template" ref="account.account_invoices"/>
        <field name="report_name">Invoice_{{ (object.name or '').replace('/','_') }}{{ object.state == 'draft' and '_draft' or '' }}</field>
        <field name="lang">{{ object.partner_id.lang }}</field>
        <field name="auto_delete" eval="True"/>
    </record>

</odoo>