<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <template id="document_tax_totals" inherit_id="account.document_tax_totals" primary="True">
            <xpath expr="//td" position="replace">
                <td>
                    <strong>Untaxed Amount</strong>
                </td>
            </xpath>
        </template>
        
        <template id="report_invoice_document" inherit_id="account.report_invoice_document">
            <div class="row" position="before">
                <style>
                    .header-info{
                        text-decoration: underline;
                        text-align: left !important;
                        width: 35%;
                    }
                    .header-value{
                        padding-left: 10px !important;
                        text-align: left !important;
                    }
                    .low-font-size{
                        font-size: 0.8em;
                    }
                </style>
            </div>
            <div class="row" position="replace">
                <div class="row custom-row">
                    <div class="col-6">
                        <t t-set="information_block">
                            <table class="table table-sm o_main_table table-borderless mt-4">
                                <thead style="display: table-row-group;" class="low-font-size">
                                    <tr/>
                                    <tr>
                                        <td class="header-info">Sales:</td>
                                        <td class="header-value">
                                            <span t-field="o.invoice_user_id"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="header-info">Email address:</td>
                                        <td class="header-value">
                                            <span t-field="o.invoice_user_id.email"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="header-info">Account contact:</td>
                                        <td class="header-value">
                                            <span>Mandy Bercker</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="header-info">Email address:</td>
                                        <td class="header-value">
                                            <span>mandy.bercker@choreograph.com</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="header-info">Phone:</td>
                                        <td class="header-value">
                                            <span>+33 362 14 51 00</span>
                                        </td>
                                    </tr>
                                    <tr/>
                                </thead>
                            </table>
                        </t>
                    </div>
                    <div class="col-6" name="address_not_same_as_shipping">
                        <t t-set="address">
                            <address class="mb-0 low-font-size" t-field="o.partner_id"
                                     t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                            <div t-if="o.partner_id.vat">
                                <span t-if="o.company_id.account_fiscal_country_id.vat_label"
                                   t-esc="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label" class="low-font-size"/>
                                <span t-else="" class="low-font-size">Tax ID</span>:
                                <span class="low-font-size" t-field="o.partner_id.vat"/>
                            </div>
                        </t>
                    </div>
                </div>
            </div>

            <xpath expr="//div[@name='comment']/span" position="attributes">
                <attribute name="class">low-font-size</attribute>
            </xpath>

            <div name="customer_code" position="replace">
            </div>
            
            <div name="due_date" position="after">
                <div class="col-auto col-3 mw-100 mb-2" t-if="o.sale_order_id.related_base" name="related_base">
                    <strong>Base involved:</strong>
                    <p class="m-0" t-field="o.sale_order_id.related_base"/>
                </div>
            </div>

            <div name="reference" position="replace">
            </div>
            
            <div name="origin" position="replace">
                <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                    <strong>Sale Order:</strong>
                    <p class="m-0" t-field="o.invoice_origin"/>
                </div>
            </div>

            <div id="informations" position="after">
                <div id="informations2" class="row mt-4 mb-4">
                    <div class="col-auto col-3 mw-100 mb-2" t-if="o.sale_order_id.date_order" name="order_date">
                        <strong>Order date:</strong>
                        <p class="m-0" t-field="o.sale_order_id.date_order" t-options="{'widget': 'date'}"/>
                    </div>

                    <div class="col-auto col-3 mw-100 mb-2" t-if="o.sale_order_id.partner_id" name="customer">
                        <strong>Client:</strong>
                        <p class="m-0" t-field="o.sale_order_id.partner_id"/>
                    </div>

                    <div class="col-auto col-3 mw-100 mb-2" t-if="o.sale_order_id.commitment_date" name="reference">
                        <strong>Delivery date order:</strong>
                        <p class="m-0" t-field="o.sale_order_id.commitment_date" t-options="{'widget': 'date'}"/>
                    </div>
                </div>
            </div>
            
            <th name="th_taxes" position="replace"/>
            <!--<td t-attf-class="text-start {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" position="replace"/>-->

            <xpath expr="//td[@name='account_invoice_line_name']" position="replace">
            <td name="td_name">
                [<span t-field="line.product_id.default_code"/>] <span t-field="line.product_id.name"/>
            </td>
        </xpath>
        </template>
    
    </data>
</odoo>