<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_pricelist_item_view_inherit" model="ir.ui.view">
        <field name="name">product.pricelist.item.view.inherit</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='pricelist_rule_base']/group/div[last()]" position="after">
                <field name="display_discount" />
            </xpath>
        </field>
    </record>

</odoo>