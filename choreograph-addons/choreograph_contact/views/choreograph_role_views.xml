<odoo>
  <data>
    <record id="choreograph_role_view_tree" model="ir.ui.view">
        <field name="name">choreograph.role.view.tree</field>
        <field name="model">choreograph.role</field>
        <field name="arch" type="xml">
          <tree editable="top">
            <field name="name"/>
          </tree>
        </field>
    </record>

    <record id="choreograph_role_action" model="ir.actions.act_window">
        <field name="name">Roles</field>
        <field name="res_model">choreograph.role</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Add a new role
          </p>
        </field>
    </record>

    <menuitem id="menu_choreograph_role"
          action="choreograph_contact.choreograph_role_action"
          name="Roles"
          sequence="10" parent="contacts.res_partner_menu_config"/>
  </data>
</odoo>