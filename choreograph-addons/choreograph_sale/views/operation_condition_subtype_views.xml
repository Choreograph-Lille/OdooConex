<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="operation_condition_subtype_view_tree" model="ir.ui.view">
            <field name="name">operation.condition.subtype.view.tree</field>
            <field name="model">operation.condition.subtype</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="type"/>
                    <field name="name"/>
                    <field name="default_fill"/>
                </tree>
            </field>
        </record>

        <record id="operation_condition_subtype_action" model="ir.actions.act_window">
            <field name="name">Condition/Exclusion subtype</field>
            <field name="res_model">operation.condition.subtype</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new subtype
                </p>
            </field>
        </record>
    </data>


</odoo>