<odoo>
  <!-- operation condition -->
  <record id="operation_condition_view_tree" model="ir.ui.view">
    <field name="name">operation.condition.view.tree</field>
    <field name="model">operation.condition</field>
    <field name="arch" type="xml">
      <tree>
        <field name="operation_type"/>
        <field name="type"/>
        <field name="subtype_id"/>
        <field name="operation_date"/>
        <field name="note"/>
      </tree>
    </field>
  </record>

  <record id="operation_condition_view_form" model="ir.ui.view">
    <field name="name">operation.condition.view.form</field>
    <field name="model">operation.condition</field>
    <field name="arch" type="xml">
      <form string="Condition/Exclusion">
        <group>
          <group>
            <field name="operation_type"/>
            <field name="type"/>
            <field name="subtype_id"/>
            <field name="operation_date"/>
          </group>
          <group>
            <field name="note"/>
          </group>
        </group>
      </form>
    </field>
  </record>

  <!-- operation condition subtype -->
  <record id="operation_condition_subtype_view_tree" model="ir.ui.view">
    <field name="name">operation.condition.subtype.view.tree</field>
    <field name="model">operation.condition.subtype</field>
    <field name="arch" type="xml">
      <tree editable="top">
        <field name="type"/>
        <field name="name"/>
        <field name="default_fill"/>
      </tree>
    </field>
  </record>

  <record id="operation_condition_subtype_action" model="ir.actions.act_window">
        <field name="name">Condition/Exclusion subtype</field>
        <field name="res_model">operation.condition.subtype</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Add a new subtype
          </p>
        </field>
    </record>

  <menuitem id="menu_operation_condition_subtype"
          action="choreograph_sale.operation_condition_subtype_action"
          name="Condition/Exclusion subtype"
          sequence="70" parent="sale.menu_sale_config"/>
</odoo>