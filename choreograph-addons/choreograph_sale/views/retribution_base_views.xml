<odoo>
  <!-- retribution base -->
  <record id="retribution_base_view_tree" model="ir.ui.view">
    <field name="name">retribution.base.view.tree</field>
    <field name="model">retribution.base</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="is_open"/>
        <field name="is_multi_base"/>
        <field name="retribution_rate"/>
        <field name="write_date"/>
      </tree>
    </field>
  </record>

  <record id="retribution_base_view_form" model="ir.ui.view">
    <field name="name">retribution.base.view.form</field>
    <field name="model">retribution.base</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <div class="oe_title">
            <h1>
              <field name="name"/>
            </h1>
          </div>
          <group>
            <group>
              <field name="is_open"/>
              <field name="is_multi_base"/>
            </group>
            <group>
              <field name="retribution_rate" attrs="{'readonly':[('is_multi_base', '=', True)]}"/>
              <field name="write_date"/>
            </group>
          </group>
          <notebook>
            <page name="quotas" string="Quotas">
              <field name="quota_base_ids" attrs="{'invisible':[('is_multi_base', '=', False)]}"/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- retribution base line-->

  <record id="retribution_base_line_view_tree" model="ir.ui.view">
    <field name="name">retribution.base.line.view.tree</field>
    <field name="model">retribution.base.line</field>
    <field name="arch" type="xml">
      <tree editable="bottom">
        <field name="base_id" domain="[('is_open', '=', True), ('is_multi_base', '=', False)]" required="1" options="{'no_create': True}"/>
        <field name="volume"/>
        <field name="volume_percentage"/>
        <field name="retribution_percentage"/>
      </tree>
    </field>
  </record>

  <!-- retribution base menu -->

  <record id="retribution_base_action" model="ir.actions.act_window">
    <field name="name">Retribution base</field>
    <field name="res_model">retribution.base</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Add a new retribution base
      </p>
    </field>
  </record>

  <menuitem id="menu_retribution_base"
          action="choreograph_sale.retribution_base_action"
          name="Retribution base"
          sequence="90" parent="sale.menu_sale_config"/>
</odoo>