<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="res_config_settings_invoice_terms_c9h_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.invoice.terms.c9h.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="60"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='invoicing_settings']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="use_invoice_terms_c9h">
                        <div class="o_setting_left_pane">
                            <field name="use_invoice_terms_c9h"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="use_invoice_terms_c9h"/>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                  aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                            <div class="text-muted">
                                Add your terms &amp; conditions at the bottom of invoices
                            </div>
                            <div class="content-group" attrs="{'invisible': [('use_invoice_terms_c9h','=',False)]}">
                                <div class="mt16">
                                    <div>
                                        <field name="invoice_terms_c9h"
                                               class="oe_account_terms mt-5 w-100"
                                               placeholder="Insert your terms &amp; conditions here..."/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    
    </data>
</odoo>