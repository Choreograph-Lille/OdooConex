<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="cron_generate_out_file" model="ir.cron">
            <field name="name">Choreograph SAGE: Generate file for out invoices and refunds</field>
            <field name="model_id" ref="model_account_move"/>
            <field name="state">code</field>
            <field name="code">model.generate_sage_file('out', limit=10)</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="active">False</field>
            <field name="nextcall" eval="(DateTime.now()+relativedelta(days=1)).strftime('%Y-%m-%d 03:00:00')"/>
        </record>

        <record id="cron_generate_in_file" model="ir.cron">
            <field name="name">Choreograph SAGE: Generate file for in invoices and refunds</field>
            <field name="model_id" ref="model_account_move"/>
            <field name="state">code</field>
            <field name="code">model.generate_sage_file('in', limit=10)</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="active">False</field>
            <field name="nextcall" eval="(DateTime.now()+relativedelta(days=1)).strftime('%Y-%m-%d 03:00:00')"/>
        </record>
    </data>
</odoo>