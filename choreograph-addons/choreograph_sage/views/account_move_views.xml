<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_view_form_inherit" model="ir.ui.view">
            <field name="name">account.move.view.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@id='other_tab_group']" position="inside">
                    <group string="SAGE" name="sage_group">
                        <field name="move_type" invisible="1"/>
                        <field name="payment_choice"/>
                        <field name="wording"/>
                        <field name="is_transferred_to_sage" readonly="1"
                               attrs="{'invisible': [('move_type', 'not in', ['in_invoice', 'in_refund', 'out_invoice', 'out_refund'])]}"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>