<odoo>

    <record id="view_company_no_expiration_form" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="password_security.view_company_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='chars_grp']" position="after">
                <p class="oe_grey">
                    <strong>Notes</strong>: The users in these groups is
                    not affected by password expiration.
                </p>
                <field name="groups_no_expiration">
                    <tree>
                        <field name="name"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

</odoo>
